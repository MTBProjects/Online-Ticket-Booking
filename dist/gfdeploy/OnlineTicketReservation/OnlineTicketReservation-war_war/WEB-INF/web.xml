<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            3600
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>employee/loginPage.xhtml</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <ejb-local-ref>
        <ejb-ref-name>AccountFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.AccountFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#AccountFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>TicketFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.TicketFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#TicketFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>TheatreFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.TheatreFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#TheatreFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ShowtimesFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.ShowtimesFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#ShowtimesFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>SeatReservedFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.SeatReservedFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#SeatReservedFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>SeatFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.SeatFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#SeatFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>RoleFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.RoleFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#RoleFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>MovieFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.MovieFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#MovieFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>EventFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.EventFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#EventFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>CustomerFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.CustomerFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#CustomerFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ScreenFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>session.ScreenFacadeLocal</local>
        <ejb-link>OnlineTicketReservation-ejb.jar#ScreenFacade</ejb-link>
    </ejb-local-ref>
</web-app>
